<Window x:Class="Client.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add User" Height="150" Width="350"
        Closing="Window_Closing">
    <Grid>
        <Label Margin="10,10,261,78">
            Username:
        </Label>
        <TextBox Margin="86,10,10,78" Name="_Username">
            username
        </TextBox>
        <CheckBox Margin="10,47,272,51" Name="_List">
            List?
        </CheckBox>
        <CheckBox Margin="75,47,209,51" Name="_Read">
            Read?
        </CheckBox>
        <CheckBox Margin="188,47,87,51" Name="_Write">
            Write?
        </CheckBox>
        <CheckBox Margin="260,47,10,51" Name="_Delete">
            Delete?
        </CheckBox>
        <Button Margin="10,74,244,10" Click="AddUser_Click">
            Add User
        </Button>
        <Button Margin="103,74,151,10" Click="Cancel_Click">
            Cancel
        </Button>
    </Grid>
</Window>
