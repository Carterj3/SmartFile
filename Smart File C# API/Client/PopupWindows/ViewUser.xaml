<Window x:Class="Client.ViewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ViewUser" Height="300" Width="300"
        Closing="Window_Closing">
    <Grid>
        <Label Margin="10,10,207,225">
            Username:
        </Label>
        <ComboBox Margin="90,10,10,225" Name="_UsernameComboBox" SelectionChanged="_UsernameComboBox_SelectionChanged">
            
        </ComboBox>
        <Label Margin="10,64,207,173">
            Directory:
        </Label>
        <ComboBox Margin="90,64,10,173" Name="_DirectoryComboBox" SelectionChanged="_DirectoryComboBox_SelectionChanged">
            
        </ComboBox>
        <CheckBox  Name="_List" Margin="139,112,71,133">
            List?
        </CheckBox>
        <CheckBox  Name="_Read" Margin="10,112,158,133">
            Read(download)?
        </CheckBox>
        <CheckBox  Name="_Write" Margin="10,160,159,85">
            Write(upload)?
        </CheckBox>
        <CheckBox  Name="_Delete" Margin="139,160,71,85">
            Delete?
        </CheckBox>
        <Button Margin="10,226,181,10" Name="_ChangeUser" Click="_ChangeUser_Click">
            Change
        </Button>
        <Button Margin="116,226,71,10" Name="_Close" Click="_Close_Click" >
            Close
        </Button>
    </Grid>
</Window>
